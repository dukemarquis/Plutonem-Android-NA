    <style name="PlutoNem.ToolBar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/pnColorAppBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

