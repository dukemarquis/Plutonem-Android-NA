        <item name="android:textColorSecondary">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="PlutoNem.TabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="android:background">?attr/pnColorAppBar</item>
