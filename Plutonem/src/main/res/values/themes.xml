    </style>

    <style name="PlutoNem.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/secondary_disabled_selector</item>
    </style>

    <style name="PlutoNem.EmptyList">
        <item name="android:textColor">?attr/pnColorOnSurfaceMedium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="PlutoNem.EmptyList.Title" parent="PlutoNem.EmptyList">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

