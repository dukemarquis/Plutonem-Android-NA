<resources>

    <!-- Semantic colors -->
    <attr name="pnColorText" format="reference|color" />
    <attr name="pnColorTextSubtle" format="reference|color" />
    <attr name="pnColorError" format="reference|color" />
    <attr name="pnColorSuccess" format="reference|color" />
    <attr name="pnColorAppBar" format="reference|color" />
    <attr name="pnColorOnSurfaceMedium" format="reference|color" />

    <attr name="pnColorWarningDark" format="reference|color" />
    <attr name="pnColorWarningLight" format="reference|color" />
    <attr name="pnColorActionModeIcon" format="reference|color" />

    <attr name="alphaEmphasisHigh" format="float"/>
    <attr name="alphaEmphasisMedium" format="float"/>
    <attr name="alphaEmphasisDisabled" format="float"/>

    <!--Common attributes-->

    <!--
        PNTextView attributes
    -->
    <declare-styleable name="PNTextView">
        <attr name="fixWidowWords" format="boolean" />
    </declare-styleable>

    <!--
        NemurIconBuyView attributes
    -->
    <declare-styleable name="NemurIconBuyView">
        <attr name="nemurIcon" format="enum">
            <enum name="buy" value="0" />
            <enum name="chat" value="1" />
        </attr>
    </declare-styleable>

    <!--
        OrderListButton attributes
    -->
    <declare-styleable name="pnOrderListButton">
        <attr name="pnOrderButtonType" format="enum">
            <enum name="receive" value="1" />
        </attr>
    </declare-styleable>

    <!--
        FilteredRecyclerView
    -->
    <declare-styleable name="FilteredRecyclerView">
        <!-- Optional: Layout resource id for the Filter Spinner main TextView -->
        <attr name="pnSpinnerItemView" format="reference"/>

        <!-- Optional: Layout resource id for the Filter Spinner dropdown TextView -->
        <attr name="pnSpinnerDropDownItemView" format="reference"/>

        <!-- Optional: Default is false. Locks the toolbar and prevents scroll to hide/reveal functionality -->
        <attr name="pnToolbarDisableScrollGestures" format="boolean"/>
        <!-- Optional: Default to false. Activate filtering by Tabs instead of Spinner -->
        <attr name="pnUseTabsForFiltering" format="boolean"/>
    </declare-styleable>

    <!--
        Actionable Empty View
    -->
    <declare-styleable name="ActionableEmptyView">
        <!-- Optional: string text of button -->
        <attr name="aevButton" format="string"/>
        <!-- Optional: resource id of image -->
        <attr name="aevImage" format="reference"/>
        <!-- Optional: string text of subtitle -->
        <attr name="aevSubtitle" format="string"/>
        <!-- Required: string text of title -->
        <attr name="aevTitle" format="string"/>
    </declare-styleable>

    <!--
        Xmpp Chat Specification
    -->
    <attr name="extraColorAccent" format="reference|color"/>

    <attr name="TextSizeCaption" format="dimension"/>
    <attr name="TextSizeSubhead" format="dimension"/>
    <attr name="TextSizeBody1" format="dimension"/>
    <attr name="TextSizeBody2" format="dimension"/>
    <attr name="TextSizeInput" format="dimension"/>
    <attr name="TextSeparation" format="dimension" />

    <attr name="IconSize" format="dimension"/>

    <attr name="color_background_secondary" format="reference|color" />
    <attr name="color_background_primary" format="reference|color"/>
    <attr name="color_warning" format="reference|color" />
    <attr name="EmojiColor" format="reference|color"/>

    <attr name="ic_send_text_offline" format="reference"/>

    <attr name="message_bubble_received_monochrome" format="reference"/>
    <attr name="message_bubble_sent" format="reference"/>
    <attr name="message_bubble_received_green" format="reference"/>

    <attr name="unread_count" format="reference|color"/>

    <attr name="conversations_overview_background" format="reference|color" />

    <attr name="icon_alpha" format="float" />

    <attr name="icon_scroll_down" format="reference"/>

    <attr name="icon_notifications" format="reference" />
    <attr name="icon_notifications_off" format="reference" />
    <attr name="icon_notifications_paused" format="reference" />
    <attr name="icon_notifications_none" format="reference" />

    <declare-styleable name="UnreadCountCustomView">
        <attr name="backgroundColor" format="reference|color"/>
    </declare-styleable>

</resources>