<?xml version="1.0" encoding="utf-8"?>
<!--
    styles used by the native nemur - all margins & padding use margin_xxxx sizes
    and all font sizes use text_sz_xxxx sizes defined in dimens.xml for consistency
-->
<resources>
    <!-- TextViews -->
    <style name="NemurTextView" parent="android:Widget.TextView">
        <item name="android:textColorLink">@color/link_nemur</item>
    </style>
    <style name="NemurTextView.Order.Title" parent="NemurTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/wordpress_text_sz_large</item>
        <item name="android:textColor">?attr/wpColorText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">3</item>
        <item name="android:fontFamily">serif</item>
    </style>
    <style name="NemurTextView.Order.Price" parent="NemurTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/wordpress_text_sz_medium</item>
        <item name="android:textColor">?attr/wpColorText</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <!-- images -->
    <style name="NemurImageView" />
    <style name="NemurImageView.Featured.CardView" parent="NemurImageView">
        <item name="android:layout_width">match_parent</item>
<!--        <item name="android:layout_height">wrap_content</item>-->
        <item name="android:layout_height">@dimen/nemur_featured_image_height_cardview</item>
    </style>

    <style name="NemurVideoView.Featured.CardView" parent="NemurImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
<!--        <item name="android:layout_height">@dimen/nemur_featured_image_height_cardview</item>-->
    </style>

    <!-- progress bars -->
    <style name="NemurProgressBar" parent="Widget.AppCompat.ProgressBar" />
</resources>