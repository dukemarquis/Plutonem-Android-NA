<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/plutonem_fragment_cdetail_card_materialcardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/plutonem_fragment_cdetail_card_constraintlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:weightSum="100">

        <FrameLayout
            android:id="@+id/plutonem_fragment_cdetail_card_framelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:scaleType="center"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/plutonem_fragment_cdetail_card_imageview_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:scaleType="centerInside"
                android:src="@drawable/white_background" />

            <ImageView
                android:id="@+id/plutonem_fragment_cdetail_card_imageview_volumecontrol"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:alpha="0"
                android:animateLayoutChanges="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_volume_up_grey_24dp" />

            <ProgressBar

                style="?android:attr/progressBarStyle"

                android:id="@+id/plutonem_fragment_cdetail_card_imageview_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

