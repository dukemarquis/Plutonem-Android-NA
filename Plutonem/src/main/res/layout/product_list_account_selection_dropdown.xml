<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_medium"
    android:paddingEnd="@dimen/wordpress_margin_extra_medium_large"
    android:paddingStart="0dp"
    android:paddingTop="@dimen/margin_medium"
    tools:ignore="UnusedAttribute">
    <!-- UnusedAttribute is ignored since foreground was added in API 23, however the impact of the missing foreground
     on lower APIs will be minimal -->

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/product_list_account_selection_image"
        android:layout_width="@dimen/products_list_spinner_avatar_size"
        android:layout_height="@dimen/products_list_spinner_avatar_size"
        android:layout_marginEnd="@dimen/products_list_spinner_dropdown_avatar_horizontal_margin"
        android:layout_marginStart="@dimen/products_list_spinner_dropdown_avatar_horizontal_margin"
        android:importantForAccessibility="no"
        android:padding="@dimen/products_list_spinner_avatar_padding"
        tools:src="@drawable/bg_oval_neutral_30_multiple_users_white_40dp"
        tools:tint="@color/neutral_50"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/product_list_account_selection_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/text"
        tools:text="@string/product_list_account_me"/>
</LinearLayout>
